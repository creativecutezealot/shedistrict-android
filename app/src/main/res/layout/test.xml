<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentPurchases1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Restore Purchaseas"
            android:layout_marginRight="10dp"
            android:textColor="@color/black50">

        </TextView>

        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/txtPurpal"
          >

        </com.appentus.shedistrict.Utils.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Cancel Subscription"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black50">

        </TextView>

    </LinearLayout>

</LinearLayout>