<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlRangebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >

        <com.appyvet.materialrangebar.RangeBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/seekbars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:mrb_connectingLineColor="@color/skyblue"
            app:mrb_leftSelectorColor="@color/skyblue"
            app:mrb_pinColor="@color/skyblue"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="12sp"
            app:mrb_rangeBar="true"
            app:mrb_tickEnd="70"

            app:mrb_rangeBarColor="@color/skyblue"
            app:mrb_rightSelectorColor="@color/skyblue"
            app:mrb_selectorBoundaryColor="@color/lightgrey"
            app:mrb_selectorSize="8dp"
            app:mrb_tickHeight="0dp"
            app:mrb_tickInterval="1"
            app:mrb_tickLabelColor="@color/lightgrey"
            app:mrb_tickLabelSelectedColor="@color/lightgrey" />


        <TextView
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbars"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@android:color/black">

        </TextView>

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbars"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@android:color/black">

        </TextView>

    </RelativeLayout>

</LinearLayout>

