<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ccTabview"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ccTabview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ccBottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/ivTab1"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:padding="10dp"
            android:src="@drawable/ic_tab_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTab2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/yellow"
            app:layout_constraintStart_toStartOf="@id/ivTab1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivTab1"/>

        <ImageView
            android:id="@+id/ivTab2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_tab_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTab3"
            app:layout_constraintStart_toEndOf="@id/ivTab1"/>
        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/yellow"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/ivTab2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivTab2"/>
        <ImageView
            android:id="@+id/ivTab3"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_tab_three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTab4"
            app:layout_constraintStart_toEndOf="@id/ivTab2"/>
        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/yellow"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/ivTab3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivTab3"/>
        <ImageView
            android:id="@+id/ivTab4"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_tab_four"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivTab5"
            app:layout_constraintStart_toEndOf="@id/ivTab3"/>
        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/yellow"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/ivTab4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivTab4"/>

        <ImageView
            android:id="@+id/ivTab5"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_tab_five"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTab4"/>
        <com.appentus.shedistrict.Utils.CircleImageView
            android:id="@+id/ivActive5"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@color/yellow"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/ivTab5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivTab5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>